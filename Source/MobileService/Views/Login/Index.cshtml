@model MobileService.ViewModels.Login.LoginViewModel
@{
    ViewData["Title"] = "Login";
}
<div class="form-background">
    <div class="container" style="padding-bottom: calc(100vh + 400px);">
        <div class=" form-container">
            <h2>Login</h2>
            <hr />
            <form asp-controller="Login" asp-action="Index">
                <div class="form-group">
                    <label asp-for="Email" class="col-form-label">Email</label>
                    <input asp-for="Email" class="form-control" placeholder="Enter your email">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group ">
                    <label asp-for="Password" class="col-form-label">Password</label>
                    <input asp-for="Password" class="form-control" placeholder="Enter your password">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="text-danger">@ViewBag.ErrorMessage</div>
                <hr />
                <button type="submit" class="btn btn-primary w-100">Login</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}